        {
            "Id": "ECSEnvironmentVariables",
            "Name": "Environment Variables",
            "Category": "EnvVariables",
            "Description": "Configure environment properties for your application.",
            "Type": "KeyValue",
            "AdvancedSetting": false,
            "Updatable": true
        }
